<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/ic_icon_text_javalova_splash"/>

            <TextView
                android:id="@+id/desc_javalova"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Best Tavern in Java"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Click On Category to see detailed list"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_11sp" />


            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dimen_10dp"
                    android:paddingVertical="1dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/search_box"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dimen_10dp"
                        layout="@layout/layout_search_box"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_filter"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_filter_alt_24"
                    app:tint="@color/color_blue_golapak" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/label_based_on_certif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Based On Ingredients"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp" />

                <TextView
                    android:id="@+id/see_all_cert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:visibility="gone"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/see_all"
                    android:textColor="@color/blue_auth"
                    android:textSize="@dimen/dimen_11sp" />

                <ImageView
                    android:id="@+id/btn_info_cert"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_toEndOf="@id/label_based_on_certif"
                    android:src="@drawable/ic_baseline_info_17"
                    app:tint="@color/color_blue_golapak" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:orientation="vertical"
                app:spanCount="4"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_ingredients_category" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/label_glass_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/glass_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp" />

                <TextView
                    android:id="@+id/see_all_food_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/see_all"
                    android:textColor="@color/blue_auth"
                    android:textSize="@dimen/dimen_11sp" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_glass_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:orientation="vertical"
                app:spanCount="4"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_ingredients_category" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/label_resto_around_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp" />

                <TextView
                    android:id="@+id/label_nearest_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="start"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:drawablePadding="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/see_all"
                    android:textColor="@color/blue_auth"
                    android:textSize="@dimen/dimen_11sp" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:orientation="vertical"
                app:spanCount="2"
                tools:itemCount="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_ingredients_category" />

            <TextView
                android:id="@+id/label_based_on_alcoholic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Based On Alcoholic"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_15sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tv_alcoholic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:orientation="vertical"
                app:spanCount="4"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_ingredients_category" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_center_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="50dp"
        android:visibility="gone"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading_circle_rgb.json"
        app:lottie_loop="true" />


</androidx.constraintlayout.widget.ConstraintLayout>